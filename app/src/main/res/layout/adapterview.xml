    <TextView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="t_2"
        android:layout_weight="1"
        android:id="@+id/t2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="t_3"
        android:layout_weight="1"
